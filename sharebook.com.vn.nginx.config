server {
    server_name sharebook.com.vn www.sharebook.com.vn;
    root /home/sa/ShareBook/web/build;
    index index.html;

    location / {
        try_files $uri /index.html;
    }

    location /socket.io {
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_pass http://localhost:3001;
    }

    location /api {
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/sharebook.com.vn/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/sharebook.com.vn/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}
server {
    if ($host = www.sharebook.com.vn) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = sharebook.com.vn) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name sharebook.com.vn www.sharebook.com.vn;
    listen 80;
    return 404; # managed by Certbot




}
