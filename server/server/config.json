{
  "restApiRoot": "/api",
  "host": "${HOST}",
  "port": "${PORT}",
  "httpPort": 8080,
  "remoting": {
    "context": false,
    "cors": false,
    "rest": {
      "handleErrors": false,
      "normalizeHttpPath": false,
      "xml": false
    },
    "json": {
      "strict": false,
      "limit": "1mb"
    },
    "urlencoded": {
      "extended": true,
      "limit": "100kb"
    }
  }
}
