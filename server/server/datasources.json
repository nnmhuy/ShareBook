{
  "db": {
    "host": "${DB_HOST}",
    "port": "${DB_PORT}",
    "url": "${DB_URL}",
    "database": "${DB_NAME}",
    "password": "${DB_PASSWORD}",
    "name": "db",
    "connector": "mongodb",
    "user": "${DB_USERNAME}",
    "useNewUrlParser": true
  },
  "imagestorage": {
    "name": "imagestorage",
    "connector": "loopback-component-storage",
    "maxFileSize": "800000",
    "allowedContentTypes": [
      "image/jpg",
      "image/jpeg",
      "image/png"
    ],
    "provider": "filesystem",
    "root": "../image-storage"
  },
  "EmailDataSource": {
    "name": "EmailDataSource",
    "connector": "mail",
    "transports": [{
      "type": "SMTP",
      "host": "smtp.gmail.com",
      "secure": true,
      "port": 465,
      "auth": {
        "user": "sharebook.org.vn@gmail.com",
        "pass": "sharebook9102"
      }
    }]
  }
}
