{
  "db": {
    "host": "${DB_HOST}",
    "port": "${DB_PORT}",
    "url": "${DB_URL}",
    "database": "${DB_NAME}",
    "password": "${DB_PASSWORD}",
    "name": "db",
    "connector": "mongodb",
    "user": "${DB_USERNAME}",
    "useNewUrlParser": true
  },
  "image-storage": {
    "name": "image-storage",
    "connector": "loopback-component-storage",
    "provider": "filesystem",
    "root": "../image-storage"
  }
}
